    "graph": "nx graph"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lerna": "^5.1.6",
    "nx": "^14.3.6",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
