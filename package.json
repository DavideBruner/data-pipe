{
  "name": "data-pipe",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream --parallel",
    "test": "jest --coverage --passWithNoTests",
